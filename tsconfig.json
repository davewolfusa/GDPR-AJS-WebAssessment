{
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "compileOnSave": true,
  "exclude": [
        "node_modules/*",
        "app/temp/*",
        "app/src/main.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "./app/temp/",
        "skipMetadataEmit": true
    },
    "include": [
    "src/**/*"
    ],
    "files": [
      "node_modules/jqwidgets-scripts/jqwidgets-ts/angular_jqxgauge.ts"
    ]
}
